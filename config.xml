<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.Loop" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Loop</name>
    <description>
        Loop organizated for person and organization.
    </description>
    <author email="dev@loopzone.org" href="http://loopzone.org">
        Loop Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-background-geolocation-lt" source="npm" />
    <access origin="rest.loopzone.org"/>
    <access origin="http://maps.google.com"/>
    <access origin="com.google.android.gms:play-services-analytics:9.2.0"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:https://play.google.com" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
